@charset "utf-8";
header{
    box-shadow: none;
}

/**更多**/
#morelist{
    height:1rem;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    box-shadow:0 10px 15px rgba(78,187,254,0.1) ;
}
#morelist>li{
    padding:0 0.35rem;
    background-color: rgba(59,172,254,0.3);
    box-shadow: 0rem 0.05rem 0.12rem 0rem
    rgba(59, 172, 254, 0.43);
    border-radius: 0.26rem;
    font-size: 0.2rem;
    letter-spacing: 0.008rem;
    /*color: #ffffff;*/
    text-align: center;
    line-height: 0.52rem;
    color: #3bacfe;
}
#morelist>li.active{
    background-color: rgba(59,172,254,1);
    color: #fff;
}
#bottom>.tag:nth-child(2){
    opacity: 1;
}

/**搜索**/
div#city{
    box-sizing: border-box;
    height: 0.6rem;
    padding: 0 0.18rem;
}
#city>a{
    display: block;
    background-color: #ebf7ff;
    border-radius: 0.3rem;
    border: solid 0.03rem rgba(55, 169, 254, 0.17);
    opacity: 0.58;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
#city>a>span{
    font-size: 0.24rem;
    line-height: 0.6rem;
    letter-spacing: 0.01rem;
    color: #c8d9e6;
    text-indent: 0.3rem;
}
.seaicon{
    width: 0.79rem;
    height: 0.44rem;
    background-color: #a4e0bd;
    border-radius: 0.21rem;
    margin-right: 0.08rem;
    text-align: center;
}
i.icon-sousuo1{
    color:#fff;
    font-size: 0.4rem;
}

/**热门推荐**/
#hot{
    position: relative;
    padding: 0.43rem 0.25rem 0.55rem;
    height:auto;
    overflow: hidden;
}
.mlist{
    display: none;
    margin-top: 0.5rem;
}
.mlist.active{
    display: block;
}
.mlist>li>a{
    flex: none;
}
.mlist .detail>p{
    height: 0.23rem;
    font-size: 0.22rem;
    line-height: 0.23rem;
    letter-spacing: 0.009rem;
    color: #000000;
    opacity: 0.3;
    text-overflow: ellipsis;
    overflow: hidden;
    border-bottom: 0.01rem solid rgba(216,223,227,1);
    padding-bottom: 0.15rem;
    margin-top: 0.15rem;
    white-space: nowrap;
}
.detail>.eval>li:last-child{
    float: right;
    font-size: 0.26rem;
    letter-spacing: 0rem;
    color: #fbb548;
}
.detail>.eval>li:last-child::before{
    background-color: transparent;
}

.page{
    height:0.3rem;
    text-align: left;
    line-height: 0.3rem;
    margin-top: 0.1rem;
}
.page>img{
    width:0.3rem;
    height:0.3rem;
}
.page>span{
    font-size: 0.2rem;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0.008rem;
    color: #cfcfcf;
}
.eval{
    margin-top: 0.15rem;
}


/**店铺描述**/
#desc{
    height:1.74rem;
    display: flex;
    padding: 0 0.25rem 0.46rem;
    margin-top: 0.51rem;
    box-shadow:0 10px 15px rgba(78,187,254,0.1) ;
}
#desc>a{
    width: 100%;
    display: flex;
    height:1.74rem;
}
.tp{
    width:1.74rem;
    height:1.74rem;
    flex: none;
    box-shadow: 0rem 0.01rem 0.21rem 0rem
    rgba(223, 223, 223, 0.43);
    border-radius: 0.1rem;
    overflow: hidden;
}
.stroemesg{
    width: 100%;
    flex-grow:1 ;
    height:1.74rem;
    margin-left: 0.31rem;
    /*background-color: #4ebbfe;*/
}
.stroemesg>h3{
    font-size: 0.3rem;
    font-weight: normal;
    letter-spacing: 0.012rem;
    color: #000000;
    opacity: 0.6;
}
.stroemesg>.evals{
    height:0.68rem;
    line-height: 0.68rem;
    display: flex;
    justify-content: space-between;
}
.evals>li{
    position: relative;
}
.evals>li:first-child{
    margin-left: 0.1rem;
}
.evals>li::before{
    position: absolute;
    top: 0;
    bottom: 0;
    left: -0.1rem;
    margin: auto;
    content: "";
    width: 0.05rem;
    height: 0.05rem;
    background-color: #44b5ff;
    box-shadow: 0rem 0.02rem 0.05rem 0rem rgba(68, 181, 255, 0.43);
    border-radius: 0.025rem;
}
.evals>li>span:first-child{
    font-size: 0.22rem;
    letter-spacing: 0.009rem;
    color: #000000;
    opacity: 0.3;
}
.evals>li>span:last-child{
    font-size: 0.26rem;
    letter-spacing: 0rem;
    color: #36a8fe;
}
.stroemesg p{
    height:0.64rem;
    font-size: 0.22rem;
    line-height: 0.32rem;
    letter-spacing: 0.009rem;
    color: #000000;
    opacity: 0.3;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
    text-overflow: ellipsis;
}
.mlist>.nav{
    height:0.7rem;
    padding: 0 0.26rem;
    background-color: #89919a;
    display: flex;
    justify-content: space-between;
}
.mlist>.nav>li{
    width:20%;
    height:100%;
}
.mlist>.nav>li>p{
    width:100%;
    height:50%;
    text-align: center;
}
